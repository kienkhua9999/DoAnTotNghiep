<!DOCTYPE html>
<html lang="en">

<head>

    <%- include("./layout/layout.css.ejs") %>
</head>

<body>

    <%- include("./layout/layout.header.ejs") %>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <div class="row">
                    <div class="col-md-4">
                        <h6 class="m-0 font-weight-bold text-primary">Quản lý banner</h6>
                    </div>
                    <div class="col-md-4">

                    </div>
                    <div class="col-md-4">
                        <a style="text-align: right;" class="dropdown-item" href="#" data-toggle="modal"
                            data-target="#addcate">
                            <i class="fas fa-plus-square" style='font-size:20px; color: 
                        #4e73df;'></i> Thêm mới
                        </a>
                    </div>
                </div>


            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID banner</th>
                                <th>Tên banner</th>
                                <th>Link</th>
                                <th>Ảnh</th>
                                <th>Tùy chọn</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% for (let index=0; index < DS_banner.length; index++) {%>
                                <tr>
                                    <td>
                                        <%= DS_banner[index].dataValues.IDbanner %>
                                    </td>
                                    <td>
                                        <%= DS_banner[index].dataValues.bannername %>
                                    </td>
                                    <td>

                                        <%= DS_banner[index].dataValues.bannerlink %>
                                    </td>
                                    <td>
                                        <img src="<%= DS_banner[index].dataValues.bannerimg %>"
                                            style="width: 100px;" />
                                    </td>
                                    <td>
                                       
                                           
                                            <ul style="list-style: none;display: flex;">
                                                <li> <a  href="#" data-toggle="modal"
                                                        data-target="#detailcate<%=DS_banner[index].dataValues.IDbanner %>">
                                                        <i class="fas fa-eye"
                                                            style='font-size:20px; color: lightsalmon;'></i>&nbsp;&nbsp;&nbsp;
                                                    </a>
                                                </li>

                                                <li> <a  href="#" data-toggle="modal"
                                                        data-target="#updatecate<%=DS_banner[index].dataValues.IDbanner %>">
                                                        <i class='fas fa-pencil-ruler'
                                                            style='font-size:20px; color: blue;'></i>&nbsp;&nbsp;&nbsp; 
                                                    </a>
                                                </li>
                                                <li> <a 
                                                        href="./banner/xoa_banner/<%= DS_banner[index].dataValues.IDbanner %>"
                                                        onclick=" confirm('Are you sure you want to delete this item?');"><i
                                                            class="fas fa-trash"
                                                            style='font-size:20px; color: 	#FF3333;'></i>&nbsp;&nbsp;&nbsp; </a>
                                                </li>
                                            </ul>
                                       
                                    </td>
                                </tr>
                                <%}%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
       
        <% for (let index=0; index < DS_banner.length; index++) {%>
            <form action="/quanly/banner/capnhat_banner/<%=DS_banner[index].dataValues.IDbanner %>" method="POST"
                enctype="application/x-www-form-urlencoded">
                <div class="modal fade" id="updatecate<%=DS_banner[index].dataValues.IDbanner %>" tabindex="-1"
                    role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">

                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Cập nhật banner
                                </h5>
                                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="form-group">
                                    <label for="exampleInputPassword1">ID banner</label>
                                    <input type="text" class="form-control" name="IDbanner"
                                        value="<%=DS_banner[index].dataValues.IDbanner %>">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Tên banner</label>
                                    <input type="text" class="form-control" name="bannername"
                                        value="<%=DS_banner[index].dataValues.bannername %>">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Link</label>
                                    <input type="text" class="form-control" name="bannerlink"
                                        value="<%=DS_banner[index].dataValues.bannerlink %>">
                                </div>
                
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Ảnh</label>
                                    <input type="text" class="form-control" name="bannerimg"
                                        value="<%=DS_banner[index].dataValues.bannerimg %>">
                                </div>
                                <button type="submit" class="btn btn-primary">Update</button>&nbsp;&nbsp;&nbsp;&nbsp;
                                <a href="/quanly/banner" class="btn btn-primary">Back</a>
                            </div>

                        </div>
                    </div>
                </div>
            </form>


            <div class="modal fade" id="detailcate<%=DS_banner[index].dataValues.IDbanner %>" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Chi tiết tin tức</h5>
                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th>ID banner</th>
                                        <td>
                                            <%= DS_banner[index].dataValues.IDbanner %>
                                        </td>

                                    </tr>
                                    <tr>
                                        <th>Tên banner</th>
                                        <td>
                                            <%= DS_banner[index].dataValues.bannername %>
                                        </td>

                                    </tr>
                                    <tr>
                                        <th>Link</th>
                                        <td>
                                            <%= DS_banner[index].dataValues.bannerlink %>
                                        </td>

                                    </tr>
                                    
                                    <tr>
                                        <th>Ảnh</th>
                                        <td>
                                            <img src="<%= DS_banner[index].dataValues.bannerimg %>"
                                                style="width: 120px;" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>

            <%}%>
                </div>
                <form action="/quanly/banner/them_banner" method="POST" enctype="application/x-www-form-urlencoded">

                    <div class="modal fade" id="addcate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Thêm mới banner</i></h5>
                                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">ID baner</label>
                                        <input type="text" class="form-control" name="IDbanner">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Tên baner</label>
                                        <input type="text" class="form-control" name="bannername">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Link</label>
                                        <input type="text" class="form-control" name="bannerlink">
                                    </div>
                                   
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Ảnh</label>
                                        <input type="text" class="form-control" name="bannerimg">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Add
                                        New</button>&nbsp;&nbsp;&nbsp;&nbsp;
                                    <a href="/quanly/banner" class="btn btn-primary">Back</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>




                <%- include("./layout/layout.footer.ejs") %>
                    <%- include("./layout/layout.js.ejs") %>
</body>


</html>